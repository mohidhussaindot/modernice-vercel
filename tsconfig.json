{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@atoms": ["components/atoms/index.ts"],
      "@molecules": ["components/molecules/index.ts"],
      "@organisms": ["components/organisms/index.ts"],
      "@templates": ["components/templates/index.ts"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@templates/*": ["components/templates/*"],
      "#app": [".nuxt/types/app"],
      "#app/*": [".nuxt/types/app/*"]
    },
    "types": ["node", "vue", "@vue/runtime-dom", "nuxt/app", "@nuxtjs/i18n"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts", "./**/*.vue", "types/**/*.ts", ".nuxt/types/**/*.d.ts"]
}
